<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="top"
    app:layout_anchor="@+id/layout_bottom_sheet"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/button_expand_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/bottom_expand"
        android:src="@drawable/ic_expand_up"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/buttonClosePlayerId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/oculte_player"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_close" />
</LinearLayout>